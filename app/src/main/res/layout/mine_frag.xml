<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/ll_my_head"
           android:layout_weight="3"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <ImageView
               android:layout_weight="5"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:src="@mipmap/ic_launcher"/>
           <TextView

               android:layout_weight="1"
               android:layout_width="match_parent"
               android:gravity="center"
               android:text="yingan"
               android:layout_height="0dp" />

       </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
           <LinearLayout
               android:id="@+id/ll_shangpin_shoucang"
               android:clickable="true"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:text="0"
                   android:layout_height="0dp" />
               <TextView
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:text="收藏的商品"
                   android:layout_height="0dp" />


           </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dianpu_shoucang"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:layout_height="0dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:text="收藏的店铺"
                    android:layout_height="0dp" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:clickable="true"
                android:id="@+id/ll_dai_fukuan"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/user_3"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/ll_dai_fahuo"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/user_4"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dai_shouhuo"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/user_5"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dai_pingjia"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/user_6"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_shouhou"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/user_7"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/ll_my_dingdan"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:text="我的订单"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_my_youhuiquan"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:text="我的优惠券"
                    android:gravity="center_vertical"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_my_tuijianyouli"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:text="推荐有礼"
                    android:gravity="center_vertical"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_address_shouhuo"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:text="收货地址管理"
                    android:gravity="center_vertical"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_guanyu_anong"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:text="关于阿农"
                    android:gravity="center_vertical"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_tuijian_haoyou"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:text="推荐好友使用阿农APP"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_bangzhu_fankui"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="20dp"
                    android:text="帮助与反馈"
                    android:gravity="center_vertical"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/ic_action_next_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>

</LinearLayout>






    </ScrollView>

</LinearLayout>