<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:weightSum="1">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_avator_cv"
        android:layout_weight="0.1"
        android:layout_width="0dp"
        android:layout_height="55dp" />
    <TextView
        android:gravity="center_vertical|left"
        android:textColor="#000"
        android:id="@+id/name_avator_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7" />
    <Button
        android:background="#fff"
        android:textColor="#cccccc"
        android:paddingLeft="8dp"
        android:gravity="center_vertical|left"
        android:text="进入店铺"
        android:id="@+id/shop_btn"
        android:layout_gravity="right"
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#000"
        android:id="@+id/avator_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/zong_tu_layout"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="3dp"
        android:id="@+id/feng_layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/avator_image_iv1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:id="@+id/avator_image_iv2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/avator_image_iv3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:id="@+id/feng_layout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/avator_image_iv4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:id="@+id/avator_image_iv5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/avator_image_iv6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feng_layout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/avator_image_iv7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:id="@+id/avator_image_iv8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/avator_image_iv9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buy_layout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/thumilb_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/title_tv"
            android:gravity="center_vertical|left"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical|right"
            android:id="@+id/buy_farm_circle_tv"
            android:text="去购买"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
<LinearLayout
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_weight="7"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/time_farmer_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:id="@+id/point_farmer"
            android:background="@drawable/point"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_weight="0.8"
            android:id="@+id/point_count"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:background="#f5f5f5"
        android:layout_marginTop="10dip" />
</LinearLayout>